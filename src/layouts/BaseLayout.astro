---
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import "../styles/global.css";

const { title = "Jaakko Lipponen", description = "Developer portfolio and blog." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-zinc-950 text-zinc-100 selection:bg-zinc-100 selection:text-zinc-950">
    <SiteHeader />
    <main class="mx-auto max-w-3xl px-6">
      <slot />
    </main>
    <SiteFooter />
  </body>
</html>
