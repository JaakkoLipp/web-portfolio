---
import ThemeToggle from "./ThemeToggle.astro";
const name = "Jaakko Lipponen";
---

<header class="py-10">
  <div class="mx-auto flex max-w-3xl items-center justify-between px-6">
    <a
      href="/"
      class="text-sm font-semibold tracking-[0.18em] text-app transition-colors hover:text-zinc-200"
    >
      {name.toUpperCase()}
    </a>

    <nav class="flex items-center gap-6 text-sm text-app">
      <a href="/about" class="link text-zinc-500!">About</a>
      <a href="/blog" class="link text-zinc-500!">Blog</a>
      <ThemeToggle />
    </nav>
  </div>
</header>